{
  "phases": {
    "setup": {
      "nixPkgs": ["php82", "composer", "nodejs_20"]
    },
    "install": {
      "cmds": [
        "composer install --optimize-autoloader --no-dev --no-interaction",
        "npm ci --only=production"
      ]
    },
    "build": {
      "cmds": [
        "npm run build"
      ]
    }
  },
  "start": {
    "cmd": "php artisan serve --host=0.0.0.0 --port=$PORT"
  }
}
