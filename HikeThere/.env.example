APP_NAME=HikeThere
APP_ENV=local
APP_KEY=
APP_DEBUG=true
APP_URL=http://localhost
APP_TIMEZONE=Asia/Manila

APP_LOCALE=en
APP_FALLBACK_LOCALE=en
APP_FAKER_LOCALE=en_US

APP_MAINTENANCE_DRIVER=file
# APP_MAINTENANCE_STORE=database

PHP_CLI_SERVER_WORKERS=4

BCRYPT_ROUNDS=12

LOG_CHANNEL=stack
LOG_STACK=single
LOG_DEPRECATIONS_CHANNEL=null
LOG_LEVEL=debug

# Database Configuration
# Local: Use SQLite for development
# Production: Use MySQL (Railway provides these variables)
DB_CONNECTION=mysql
# DB_HOST=127.0.0.1
# DB_PORT=3306
# DB_DATABASE=hikethere
# DB_USERNAME=root
# DB_PASSWORD=

SESSION_DRIVER=database
SESSION_LIFETIME=120
SESSION_ENCRYPT=false
SESSION_PATH=/
SESSION_DOMAIN=null

BROADCAST_CONNECTION=log

# Filesystem Configuration
# Local: Use 'local' or 'public'
# Production: Use 'gcs' for Google Cloud Storage
FILESYSTEM_DISK=local

QUEUE_CONNECTION=database

CACHE_STORE=database
# CACHE_PREFIX=

MEMCACHED_HOST=127.0.0.1

REDIS_CLIENT=phpredis
REDIS_HOST=127.0.0.1
REDIS_PASSWORD=null
REDIS_PORT=6379

# Mail Configuration
# Development: Use 'log' driver
# Production: Use SMTP (Gmail, SendGrid, Mailgun, etc.)
MAIL_MAILER=log
MAIL_SCHEME=null
MAIL_HOST=127.0.0.1
MAIL_PORT=2525
MAIL_USERNAME=null
MAIL_PASSWORD=null
MAIL_FROM_ADDRESS="hello@example.com"
MAIL_FROM_NAME="${APP_NAME}"

# AWS S3 Configuration (if using S3 instead of GCS)
AWS_ACCESS_KEY_ID=
AWS_SECRET_ACCESS_KEY=
AWS_DEFAULT_REGION=us-east-1
AWS_BUCKET=
AWS_USE_PATH_STYLE_ENDPOINT=false

# Google Cloud Storage Configuration (Production)
# Uncomment and configure for production deployment
# GOOGLE_CLOUD_PROJECT_ID=your-gcp-project-id
# GOOGLE_CLOUD_KEY_FILE=/app/storage/gcs-credentials.json
# GOOGLE_CLOUD_STORAGE_BUCKET=your-bucket-name
# GOOGLE_CLOUD_STORAGE_PATH_PREFIX=
# GOOGLE_CLOUD_STORAGE_API_URI=

# Google Maps API
# Required for map features, location search, and directions
GOOGLE_MAPS_API_KEY=

# OpenRouteService API
# Required for hiking route calculations
ORS_API_KEY=

# OpenWeatherMap API
# Required for weather forecasts and notifications
OPENWEATHER_API_KEY=

# PayMongo Configuration
# Development: Use test keys (pk_test_*, sk_test_*)
# Production: Use live keys (pk_live_*, sk_live_*)
PAYMONGO_PUBLIC_KEY=pk_test_your_public_key_here
PAYMONGO_SECRET_KEY=sk_test_your_secret_key_here

# ML Recommender Service URL
# Local: http://localhost:8001
# Production: Your deployed ML service URL or internal Railway service URL
ML_RECOMMENDER_URL=http://localhost:8001

VITE_APP_NAME="${APP_NAME}"
